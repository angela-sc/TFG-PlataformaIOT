<div class="container">
    <h3>Página de administración de proyectos</h3>

    <div style="float:left;">
        <button class="btn btn-primary btn-sm" @onclick="@(async () => await Crear())"><span class="oi oi-plus"></span>Crear proyecto</button>
    </div>
    <br /> <p class="card-subtitle"> Proyectos disponibles</p><br />
    <div class="card" style="width:15rem;">
        <div class="card-body">
            <h5 class="card-title"> Proyecto de ejemplo</h5>
            <p class="card-text"> Esto es una descripción genérica para un proyecto de ejemplo.</p>
            <div class="row" style="position:center;">
                <button class="btn btn-warning btn-sm" @onclick="@(async () => await Editar())"><span class="oi oi-pencil"></span> Editar</button>
                <button class="btn btn-danger btn-sm" @onclick="@(async () => await Eliminar())"><span class="oi oi-x"></span> Eliminar</button>

            </div>

        </div>
    </div>
</div>

