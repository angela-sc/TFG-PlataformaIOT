@page "/proyecto/{proyecto}"

@using Libreria.Entidades
@using Servicios
@using Blazorise.Charts

@using PortalWeb.ViewModel

@inherits ProyectoViewModel


<!-- hero-image: encabezado-->
<div class="hero-image">
    <div class="hero-text" style="font-size:100px;">
        <h2>@proyecto</h2> <!--nombre del proyecto-->
    </div>
</div>
<!-- .hero-image-->

<div class="container" style="margin-top:10px;">

    @if (estacionesBase.Count() > 0)
    {
        <div class="row">
            <h4>Estaciones bases del proyecto</h4>

            @foreach (EntidadEstacionBase eb in estacionesBase)
            {
                var link = $"estacionbase/{eb.Id}";
                <a href=@link class="list-group-item list-group-item-action">Estacion base @eb.Nombre</a>
            }
        </div>
    }
    else
    {
        <div class="row"><span class="oi oi-warning">  </span>Este proyecto no tiene estaciones base asociadas.</div>
    }
</div>

